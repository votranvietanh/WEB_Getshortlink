# Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# Application Settings
# ============================================
APP_NAME=Shopee Affiliate Link Shortener
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=affiliate_db
DB_USERNAME=postgres
DB_PASSWORD=postgres123

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=86400

# ============================================
# Shopee API Configuration
# ============================================
SHOPEE_API_URL=https://open-api.shopee.com
SHOPEE_API_KEY=your_shopee_api_key_here
SHOPEE_API_SECRET=your_shopee_api_secret_here
SHOPEE_AFFILIATE_ID=your_affiliate_id_here

# ============================================
# Email Configuration (Optional)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@yourapp.com

# ============================================
# Frontend Configuration
# ============================================
VITE_API_URL=http://localhost:8080/api/v1
VITE_APP_NAME=Shopee Link Shortener
VITE_SHORT_DOMAIN=http://localhost:8080

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=5MB
UPLOAD_DIR=./uploads

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_HOUR=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/application.log

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# ============================================
# Security
# ============================================
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=1800

# ============================================
# Analytics & Monitoring (Optional)
# ============================================
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# ============================================
# Third-party Services (Optional)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=ap-southeast-1

# ============================================
# Payment Gateway (Optional)
# ============================================
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
